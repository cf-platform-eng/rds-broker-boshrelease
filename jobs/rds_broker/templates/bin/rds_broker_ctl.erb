#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status

# Setup common env vars and folders
source /var/vcap/packages/bosh-helpers/ctl_setup.sh 'rds_broker'
export RDS_BROKER_PID_FILE=${RDS_BROKER_PID_DIR}/rds_broker.pid

case $1 in

  start)
    pid_guard ${RDS_BROKER_PID_FILE} ${JOB_NAME}
    echo $$ > ${RDS_BROKER_PID_FILE}

    # Create RDS Broker user & group
    create_group ${RDS_BROKER_GROUP}
    create_user ${RDS_BROKER_USER} ${RDS_BROKER_GROUP}

    # Start RDS Broker service
    exec chpst -u ${RDS_BROKER_USER}:${RDS_BROKER_GROUP} rds-broker \
      --config=${RDS_BROKER_CONF_DIR}/config.json \
      --port=${RDS_BROKER_PORT} \
      >>${RDS_BROKER_LOG_DIR}/${OUTPUT_LABEL}.stdout.log \
      2>>${RDS_BROKER_LOG_DIR}/${OUTPUT_LABEL}.stderr.log
    ;;

  stop)
    # Stop RDS Broker service
    kill_and_wait ${RDS_BROKER_PID_FILE}
    ;;

  *)
    echo "Usage: $0 {start|stop}"
    exit 1
    ;;

esac
exit 0
